{
  "manifest_version": 3,
  "name": "Smart Brain Link Saver",
  "version": "1.0.0",
  "description": "Quickly classify and save webpages to your smart-brain database.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "smart-brain@hackudc2026",
      "strict_min_version": "109.0"
    }
  }
}
